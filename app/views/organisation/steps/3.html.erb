<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= form_for @application, url: "/organisation/steps/3", method: :post do |f| %>
      <%= f.govuk_collection_radio_buttons :step_free,
          @application.step_free_types.map{|type| OpenStruct.new(id: type, name: t(type, scope: "organisation.step_free_types")) },
          :id,
          :name,
          legend: { text: t('step_free.full', scope: "organisation.questions") }
      %>
      <%= f.govuk_submit t('continue') %>
    <% end %>
  </div>
</div>
