<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= render partial: "shared/back_link" %>

    <%= form_for @application, url: "/organisation/steps/10", method: :post do |f| %>
      <%= f.govuk_check_boxes_fieldset :agree_future_contact, multiple: false, legend: { text: t('agree_future_contact.full', scope: "organisation.questions"), size: 'l' } do %>
        <p class="govuk-body">
          <%= t('agree_future_contact.comment', scope: "organisation.questions") %>
        </p>
        <%= f.govuk_check_box :agree_future_contact, "true", "false", multiple: false, link_errors: true, label: { text: t('agree_future_contact.full', scope: "organisation.questions") } %><% end %>
      <%= f.govuk_submit t('continue') %>
    <% end %>
  </div>
</div>


