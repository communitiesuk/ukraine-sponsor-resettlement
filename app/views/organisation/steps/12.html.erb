<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= form_for @application, url: "/organisation/steps/12", method: :post do |f| %>
      <%= f.govuk_text_field :email,
        label: { text: t('email.full', scope: "organisation.questions") },
        type: "email"
      %>
      <%= f.govuk_submit t('continue') %>
    <% end %>
  </div>
</div>
