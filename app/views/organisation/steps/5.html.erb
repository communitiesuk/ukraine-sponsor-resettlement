<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= render partial: "shared/back_link" %>

    <%= form_for @application, url: "/organisation/steps/5", method: :post do |f| %>
      <%= f.govuk_text_field :single_room_count,
        label: { text: t('single_room_count.full', scope: "organisation.questions") },
        type: "number",
        min: 0
      %>
      <%= f.govuk_submit t('continue') %>
    <% end %>
  </div>
</div>
