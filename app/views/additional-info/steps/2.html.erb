<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">

    <a href="#" onclick="history.go(-1);return false;" class="govuk-back-link">Back</a>

    <%= form_for @application, url: "/additional-info/steps/2", method: :post do |f| %>
      <%= f.govuk_text_field :fullname,
                             label: { text: t('fullname.full', scope: "additional_info.questions") },
                             type: "text"
      %>
      <%= f.govuk_submit t('continue') %>
    <% end %>
  </div>
</div>
