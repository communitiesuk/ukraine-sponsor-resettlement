<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">

    <p>&nbsp;</p>

    <%= form_for @application, url: "/additional-info/steps/1", method: :post do |f| %>
      <%= f.govuk_text_field :fullname,
                             label: { text: t('fullname.full', scope: "additional_info.questions") },
                             hint: { text: t('fullname.hint', scope: "additional_info.questions")},
                             type: "text"
      %>
      <%= f.govuk_submit t('continue') %>
    <% end %>
  </div>
</div>
