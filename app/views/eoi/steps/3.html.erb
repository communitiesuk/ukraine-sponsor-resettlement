<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= render partial: "shared/back_link" %>

    <%= form_for @application, url: "/expression-of-interest/steps/3", method: :post do |f| %>
      <%= f.govuk_text_field :phone_number,
        label: { text: t('phone_number.full', scope: "expression_of_interest.questions") },
        type: "tel"
      %>
      <%= f.govuk_submit t('continue') %>
    <% end %>
  </div>
</div>

