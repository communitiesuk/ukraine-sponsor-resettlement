<% provide(:title, (session[:has_error] || '') + t('email.full', scope: "expression_of_interest.questions") + " - ") %>


<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">

    <% if request.query_string == 'check' %>
      <% formurl = "/expression-of-interest/steps/2?check" %>
    <% else %>
      <% formurl = "/expression-of-interest/steps/2" %>
    <% end %>

    <%= form_for @application, url: formurl, method: :post do |f| %>
      <%= f.govuk_error_summary link_base_errors_to: :email %>
      <fieldset class="govuk-fieldset">
        <legend class="govuk-fieldset__legend govuk-fieldset__legend--l">
          <h1 class="govuk-heading-l">
          <%= t('email.full', scope: "expression_of_interest.questions")  %>
          </h1>
        </legend>
      </fieldset>

      <%= f.govuk_text_field :email,
        label: { text: t('email.full', scope: "expression_of_interest.questions"), hidden:true },
        type:"text",
        inputmode:"email"
      %>
      <%= f.govuk_submit t('continue') %>
    <% end %>
  </div>
</div>

