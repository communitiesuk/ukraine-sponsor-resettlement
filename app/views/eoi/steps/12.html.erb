<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= render partial: "shared/back_link" %>

    <% if request.query_string == 'check' %>
      <% formurl = "/expression-of-interest/steps/12?check" %>
    <% else %>
      <% formurl = "/expression-of-interest/steps/12" %>
    <% end %>

    <%= form_for @application, url: formurl, method: :post do |f| %>

      <h1 class="govuk-heading-l">
         How many bedrooms are available for guests in the property youâ€™re registering now?
      </h1>

      <div class="govuk-hint">
        Single bedrooms can normally only contain a single bed. Double bedrooms should have enough space for at least 1 double bed or 2 single beds.
      </div>

      <br>

      <%= f.govuk_text_field :single_room_count,
        label: { text: 'Single bedrooms' },
        type: "number",
        width: 2
      %>
      <%= f.govuk_text_field :double_room_count,
        label: { text: 'Double bedrooms' },
        type: "number",
        min: 0,
        width: 2
      %>
      <%= f.govuk_submit t('continue') %>
    <% end %>
  </div>
</div>

