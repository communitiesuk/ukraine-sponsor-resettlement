<% provide(:title, (session[:has_error] || '') + t('phone_number.short', scope: "expression_of_interest.questions") + " - ") %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">

    <% if request.query_string == 'check' %>
      <% formurl = "/expression-of-interest/steps/3?check" %>
    <% else %>
      <% formurl = "/expression-of-interest/steps/3" %>
    <% end %>

    <%= form_for @application, url: formurl, method: :post do |f| %>
    <%= f.govuk_error_summary link_base_errors_to: :phone_number %>
      <fieldset class="govuk-fieldset">
        <legend class="govuk-fieldset__legend govuk-fieldset__legend--l">
          <h1 class="govuk-heading-l">
            <%= t('phone_number.short', scope: "expression_of_interest.questions")  %>
          </h1>
        </legend>
      </fieldset>

      <%= f.govuk_text_field :phone_number,
        label: { text: t('phone_number.full', scope: "expression_of_interest.questions"), hidden:true },
        hint: { text: t('phone_number.full', scope: "expression_of_interest.questions")},
        type: "text",
        inputmode: "tel"
      %>
      <%= f.govuk_submit t('continue') %>
    <% end %>
  </div>
</div>

