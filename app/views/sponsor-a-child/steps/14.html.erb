<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">

    <a href="#" onclick="history.go(-1);return false;" class="govuk-back-link">Back</a>

    <%= form_for @application, url: "/sponsor-a-child/steps/14", method: :post do |f| %>

    <%= f.govuk_error_summary link_base_errors_to: :email %>

    <h1 class="govuk-heading-l"><%= t('email.full', scope: "unaccompanied_minor.questions")%></h1>
    
      <%= f.govuk_text_field :email,
                             label: { text: "", hidden: true },
                             hint: { text: t('email.hint', scope: "unaccompanied_minor.questions")},
                             type: "email"
      %>
      <%= f.govuk_submit t('continue') %>
      <a class="govuk-link govuk-!-font-size-19" href="/sponsor-a-child/save-and-return">Save and return later</a>
    <% end %>
  </div>
</div>
