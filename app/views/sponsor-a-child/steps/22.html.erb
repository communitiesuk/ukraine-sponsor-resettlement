
<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">

    <h1 class="govuk-heading-l">You have added <%= pluralize(@application.other_nationalities.length(), "other nationality") %></h1>
    <table class="govuk-table">
        <thead class="govuk-table__head">
          <tr class="govuk-table__row">
            <th scope="col" class="govuk-table__header">Other nationalities</th>
            <th scope="col" class="govuk-table__header">Action</th>
          </tr>
        </thead>
        <tbody class="govuk-table__body">
            <% @application.other_nationalities.each do |nationality| %>
            <tr class="govuk-table__row">
              <td class="govuk-table__cell"><%= nationality[0] %></td>
              <td class="govuk-table__cell">
                <%= link_to("Remove", "/sponsor-a-child/remove-other-nationality/#{nationality[0].split.first}") %>
              </td>
            </tr>
        </tbody>
        <% end %>
    </table>

    <div>
        <%= govuk_button_link_to 'Add another nationality', "/sponsor-a-child/steps/21", class: "govuk-button--secondary"  %>
    </div>
    <div class="govuk-button-group">
      <%= govuk_button_link_to 'Continue', "/sponsor-a-child/task-list"  %>
      <a class="govuk-link" href="/sponsor-a-child/save-and-return">Save and return later</a>
    </div>
  </div>
</div>
