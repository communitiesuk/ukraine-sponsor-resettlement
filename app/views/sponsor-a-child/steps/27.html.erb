<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">

    <%= form_for @application, url: "/sponsor-a-child/steps/27", method: :post do |f| %>

    <%= f.govuk_error_summary link_base_errors_to: :adult_given_name %>


    <h1 class="govuk-heading-l"><%= t('adults_at_address.full', scope: "unaccompanied_minor.questions")%></h1>

      <%= f.govuk_fieldset legend: { text: "", hidden: true },
                           hint: { text: t('different_address.hint_html', :formatted_address => @application.formatted_address?, scope: "unaccompanied_minor.questions") } do %>
          
          <div class="govuk-inset-text"><%=@application.formatted_address?%></div>

          <details class="govuk-details" data-module="govuk-details">
                <summary class="govuk-details__summary">
                    <span class="govuk-details__summary-text">
                    I'm not sure how to enter their name
                    </span>
                </summary>
                <div class="govuk-details__text">Enter their name as shown on their identity documents. Use the English spelling if it is written in two languages. <br/>
                <br/>
                'Given names': enter their first name and any other names like these, for example:

                <ul class="govuk-list govuk-list--bullet">
                <li> middle names </li>
                <li> a suffix (for example, Jr) </li>
                <li> a patronymic name (common in Ukraine) </li>
                </ul>
                <div>
                'Family name': enter their last name (surname).
                </div>
                </div>
            
            </details>

            <%= f.govuk_text_field :adult_given_name, label: { text: 'Given names' }, type: "text" %>
            <%= f.govuk_text_field :adult_family_name, label: { text: 'Family name' }, type: "text" %>
      <% end %>

      <div class="govuk-button-group">
        <%= f.govuk_submit t('continue') %>
        <a class="govuk-link" href="/sponsor-a-child/save-and-return">Save and return later</a>
      </div>
    
    <% end %>
  </div>
</div>
