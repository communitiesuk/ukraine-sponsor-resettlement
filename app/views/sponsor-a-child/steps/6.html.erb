<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">

    <a href="#" onclick="history.go(-1);return false;" class="govuk-back-link">Back</a>

    <%= form_for @application, url: "/sponsor-a-child/steps/6", method: :post do |f| %>

    <h1 class="govuk-heading-l"><%= t('sponsor_commitment.full', scope: "unaccompanied_minor.questions")%></h1>


      <%= f.govuk_collection_radio_buttons :is_committed,
                                           @application.eligibility_types.map{ |type| OpenStruct.new(id: type, name: t(type, scope: "unaccompanied_minor.different_address")) },
                                           :id,
                                           :name,
                                           legend: { text: "", hidden: true },
                                           hint: { text: t('sponsor_commitment.hint_html', scope: "unaccompanied_minor.questions")}
      %>

      <%= f.govuk_submit t('continue') %>
    <% end %>
  </div>
</div>
