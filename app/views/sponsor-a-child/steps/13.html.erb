<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">

    <a href="#" onclick="history.go(-1);return false;" class="govuk-back-link">Back</a>

   <h1 class="govuk-heading-l"> You have added <%= pluralize(@application.other_names.length(), "other name") %> </h1>
    <table class="govuk-table">
        <thead class="govuk-table__head">
            <tr class="govuk-table__row">
              <th scope="col" class="govuk-table__header">Other names</th>
              <th scope="col" class="govuk-table__header"></th>
            </tr>
        </thead>
        <tbody class="govuk-table__body">
            <% @application.other_names.each do |name| %>
            <tr class="govuk-table__row">
              <td class="govuk-table__cell"><%= name[0] %> <%= name[1] %></td>
              <td class="govuk-table__cell">
                <%= link_to("Remove", "/sponsor-a-child/remove-other-name/#{name[0]}/#{name[1]}") %>
              </td>
            </tr>
        </tbody>
        <% end %>
    </table>

    <div>
        <%= govuk_button_link_to 'Add another name', "/sponsor-a-child/steps/12", class: "govuk-button--secondary"  %>
    </div>
    <div class="govuk-button-group">
      <%= govuk_button_link_to 'Continue', "/sponsor-a-child/task-list"  %>
      
      <% if @feature_save_and_return_active == true %>
        <a class="govuk-link govuk-!-font-size-19" href="/sponsor-a-child/save-and-return">Save and return later</a>
      <% end %>
    </div>

  </div>
</div>
